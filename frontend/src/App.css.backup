


:root {
  
  --primary-50: #e3f2fd;
  --primary-100: #bbdefb;
  --primary-200: #90caf9;
  --primary-300: #64b5f6;
  --primary-400: #42a5f5;
  --primary-500: #2196f3;
  --primary-600: #1e88e5;
  --primary-700: #1976d2;
  --primary-800: #1565c0;
  --primary-900: #0d47a1;

  
  --secondary-50: #f3e5f5;
  --secondary-100: #e1bee7;
  --secondary-200: #ce93d8;
  --secondary-300: #ba68c8;
  --secondary-400: #ab47bc;
  --secondary-500: #9c27b0;
  --secondary-600: #8e24aa;
  --secondary-700: #7b1fa2;
  --secondary-800: #6a1b9a;
  --secondary-900: #4a148c;

  
  --accent-50: #e0f7fa;
  --accent-100: #b2ebf2;
  --accent-200: #80deea;
  --accent-300: #4dd0e1;
  --accent-400: #26c6da;
  --accent-500: #00bcd4;
  --accent-600: #00acc1;
  --accent-700: #0097a7;
  --accent-800: #00838f;
  --accent-900: #006064;

  
  --success-light: #c8e6c9;
  --success: #4caf50;
  --success-dark: #2e7d32;

  --warning-light: #fff9c4;
  --warning: #ffc107;
  --warning-dark: #f57c00;

  --danger-light: #ffcdd2;
  --danger: #ef5350;
  --danger-dark: #c62828;

  --info-light: #b3e5fc;
  --info: #03a9f4;
  --info-dark: #01579b;

  
  --gray-50: #fafafa;
  --gray-100: #f5f5f5;
  --gray-200: #eeeeee;
  --gray-300: #e0e0e0;
  --gray-400: #bdbdbd;
  --gray-500: #9e9e9e;
  --gray-600: #757575;
  --gray-700: #616161;
  --gray-800: #424242;
  --gray-900: #212121;

  
  --text-primary: #1a1a2e;
  --text-secondary: #4a4a68;
  --text-tertiary: #6c757d;
  --text-inverse: #ffffff;

  
  --bg-primary: #ffffff;
  --bg-secondary: #f8f9fa;
  --bg-tertiary: #e9ecef;
  --bg-gradient-1: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --bg-gradient-2: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  --bg-gradient-3: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  --bg-gradient-calm: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  --bg-gradient-hero: linear-gradient(135deg, #667eea 0%, #764ba2 100%);

  
  --spacing-xs: 0.25rem;
  --spacing-sm: 0.5rem;
  --spacing-md: 1rem;
  --spacing-lg: 1.5rem;
  --spacing-xl: 2rem;
  --spacing-2xl: 3rem;
  --spacing-3xl: 4rem;

  
  --radius-sm: 4px;
  --radius-md: 8px;
  --radius-lg: 12px;
  --radius-xl: 16px;
  --radius-2xl: 24px;
  --radius-full: 9999px;

  
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
    0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1),
    0 4px 6px -2px rgba(0, 0, 0, 0.05);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1),
    0 10px 10px -5px rgba(0, 0, 0, 0.04);
  --shadow-2xl: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  --shadow-inner: inset 0 2px 4px 0 rgba(0, 0, 0, 0.06);
  --shadow-glow: 0 0 20px rgba(102, 126, 234, 0.4);

  
  --transition-fast: 0.15s ease;
  --transition-base: 0.3s ease;
  --transition-slow: 0.5s ease;
  --transition-bounce: cubic-bezier(0.68, -0.55, 0.265, 1.55);

  
  --z-dropdown: 1000;
  --z-sticky: 1020;
  --z-fixed: 1030;
  --z-modal-backdrop: 1040;
  --z-modal: 1050;
  --z-popover: 1060;
  --z-tooltip: 1070;
}




* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: "Inter", -apple-system, BlinkMacSystemFont, sans-serif;
  line-height: 1.6;
  color: var(--text-primary);
  background: linear-gradient(135deg, #f5f7fa 0%, #e8f0ff 100%);
  overflow-x: hidden;
  min-height: 100vh;
}

.app-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.main-content {
  flex: 1;
  padding: var(--spacing-xl);
  margin-top: 80px;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--spacing-xl);
  width: 100%;
}



h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: "Poppins", sans-serif;
  margin-bottom: 0.5em;
  font-weight: 600;
  line-height: 1.2;
  color: var(--text-primary);
}

h1 {
  font-size: clamp(2rem, 5vw, 3rem);
  font-weight: 700;
}

h2 {
  font-size: clamp(1.5rem, 4vw, 2.25rem);
}

h3 {
  font-size: clamp(1.25rem, 3vw, 1.75rem);
}

h4 {
  font-size: 1.25rem;
}

p {
  margin-bottom: 1rem;
  color: var(--text-secondary);
}



.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
  padding: 12px 24px;
  border: none;
  border-radius: var(--radius-md);
  cursor: pointer;
  text-decoration: none;
  font-weight: 600;
  font-size: 0.95rem;
  transition: all var(--transition-base);
  text-align: center;
  position: relative;
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.btn::before {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.btn:hover::before {
  width: 300px;
  height: 300px;
}

.btn:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.btn:active {
  transform: translateY(0);
}

.btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none;
}

.btn-primary {
  background: var(--bg-gradient-1);
  color: var(--text-inverse);
  border: 2px solid transparent;
}

.btn-primary:hover {
  box-shadow: var(--shadow-glow);
}

.btn-secondary {
  background: var(--bg-gradient-2);
  color: var(--text-inverse);
}

.btn-success {
  background: var(--success);
  color: var(--text-inverse);
}

.btn-success:hover {
  background: var(--success-dark);
}

.btn-danger {
  background: var(--danger);
  color: var(--text-inverse);
}

.btn-danger:hover {
  background: var(--danger-dark);
}

.btn-outline {
  background: transparent;
  border: 2px solid var(--primary-500);
  color: var(--primary-600);
}

.btn-outline:hover {
  background: var(--primary-500);
  color: var(--text-inverse);
}

.btn-link {
  background: none;
  color: var(--primary-600);
  box-shadow: none;
  padding: 8px 12px;
}

.btn-link:hover {
  text-decoration: underline;
  transform: none;
  box-shadow: none;
}

.btn-small {
  padding: 8px 16px;
  font-size: 0.875rem;
}

.btn-large {
  padding: 16px 32px;
  font-size: 1.1rem;
}



.form-group {
  margin-bottom: var(--spacing-lg);
}

.form-group label {
  display: block;
  margin-bottom: var(--spacing-sm);
  font-weight: 600;
  color: var(--text-primary);
  font-size: 0.95rem;
}

.form-group input,
.form-group select,
.form-group textarea {
  width: 100%;
  padding: 12px 16px;
  border: 2px solid var(--gray-300);
  border-radius: var(--radius-md);
  font-size: 1rem;
  transition: all var(--transition-base);
  background: var(--bg-primary);
  color: var(--text-primary);
  font-family: inherit;
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
  outline: none;
  border-color: var(--primary-500);
  box-shadow: 0 0 0 4px var(--primary-50);
}

.form-group textarea {
  min-height: 120px;
  resize: vertical;
}

.form-group input::placeholder,
.form-group textarea::placeholder {
  color: var(--gray-500);
}



.card {
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-lg);
  transition: all var(--transition-base);
  border: 1px solid var(--gray-200);
}

.card:hover {
  box-shadow: var(--shadow-xl);
  transform: translateY(-4px);
}

.card-header {
  margin-bottom: var(--spacing-lg);
  padding-bottom: var(--spacing-md);
  border-bottom: 2px solid var(--gray-200);
}

.card-body {
  padding: var(--spacing-md) 0;
}

.card-footer {
  margin-top: var(--spacing-lg);
  padding-top: var(--spacing-md);
  border-top: 1px solid var(--gray-200);
}



.alert {
  padding: 16px 20px;
  border-radius: var(--radius-md);
  margin-bottom: var(--spacing-md);
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  font-weight: 500;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.alert-error {
  background-color: var(--danger-light);
  color: var(--danger-dark);
  border-left: 4px solid var(--danger);
}

.alert-success {
  background-color: var(--success-light);
  color: var(--success-dark);
  border-left: 4px solid var(--success);
}

.alert-warning {
  background-color: var(--warning-light);
  color: var(--warning-dark);
  border-left: 4px solid var(--warning);
}

.alert-info {
  background-color: var(--info-light);
  color: var(--info-dark);
  border-left: 4px solid var(--info);
}



.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  box-shadow: var(--shadow-md);
  z-index: var(--z-fixed);
  transition: all var(--transition-base);
}

.navbar.scrolled {
  box-shadow: var(--shadow-lg);
  background: rgba(255, 255, 255, 0.98);
}

.nav-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 var(--spacing-xl);
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80px;
}

.nav-logo {
  font-size: 1.8rem;
  font-weight: 700;
  background: var(--bg-gradient-1);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-decoration: none;
  font-family: "Poppins", sans-serif;
  transition: all var(--transition-base);
}

.nav-logo:hover {
  transform: scale(1.05);
}

.nav-menu {
  display: flex;
  list-style: none;
  gap: var(--spacing-sm);
  align-items: center;
}

.nav-link {
  text-decoration: none;
  color: var(--text-secondary);
  font-weight: 600;
  padding: 10px 18px;
  border-radius: var(--radius-md);
  transition: all var(--transition-base);
  position: relative;
}

.nav-link::after {
  content: "";
  position: absolute;
  bottom: 6px;
  left: 18px;
  right: 18px;
  height: 2px;
  background: var(--bg-gradient-1);
  transform: scaleX(0);
  transition: transform var(--transition-base);
}

.nav-link:hover {
  color: var(--primary-600);
  background: var(--primary-50);
}

.nav-link:hover::after {
  transform: scaleX(1);
}

.nav-link.active {
  color: var(--primary-600);
  background: var(--primary-100);
}

.nav-link.active::after {
  transform: scaleX(1);
}



.crisis-banner {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  padding: 14px 0;
  font-size: 0.95rem;
  text-align: center;
  color: white;
  box-shadow: var(--shadow-sm);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%,
  100% {
    opacity: 1;
  }
  50% {
    opacity: 0.95;
  }
}

.crisis-content {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  gap: var(--spacing-md);
  padding: 0 var(--spacing-xl);
}

.crisis-content strong {
  font-weight: 700;
  font-size: 1.05rem;
}

.crisis-contact {
  display: flex;
  gap: var(--spacing-lg);
  flex-wrap: wrap;
}

.crisis-contact span {
  font-weight: 700;
  padding: 6px 14px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: var(--radius-md);
  backdrop-filter: blur(5px);
}



.landing-page {
  padding-top: var(--spacing-xl);
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hero-section {
  background: var(--bg-gradient-hero);
  color: white;
  padding: 6rem 2rem;
  border-radius: var(--radius-2xl);
  margin-bottom: var(--spacing-3xl);
  text-align: center;
  width: 100%;
  max-width: 1400px;
  position: relative;
  overflow: hidden;
  box-shadow: var(--shadow-2xl);
}

.hero-section::before {
  content: "";
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(
    circle,
    rgba(255, 255, 255, 0.1) 0%,
    transparent 70%
  );
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.hero-content {
  position: relative;
  z-index: 1;
}

.hero-title {
  font-size: clamp(2.5rem, 6vw, 4rem);
  margin-bottom: var(--spacing-lg);
  font-weight: 800;
  line-height: 1.1;
  text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
  animation: fadeInUp 0.8s ease;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.hero-subtitle {
  font-size: clamp(1.1rem, 2vw, 1.4rem);
  margin-bottom: var(--spacing-2xl);
  max-width: 700px;
  margin-left: auto;
  margin-right: auto;
  line-height: 1.6;
  opacity: 0.95;
  animation: fadeInUp 0.8s ease 0.2s both;
}

.cta-buttons {
  display: flex;
  justify-content: center;
  gap: var(--spacing-lg);
  flex-wrap: wrap;
  animation: fadeInUp 0.8s ease 0.4s both;
}

.cta-buttons .btn {
  padding: 16px 36px;
  font-size: 1.1rem;
  font-weight: 700;
  box-shadow: var(--shadow-lg);
}

.cta-buttons .btn-primary {
  background: white;
  color: var(--primary-700);
}

.cta-buttons .btn-primary:hover {
  transform: translateY(-3px) scale(1.05);
  box-shadow: var(--shadow-xl);
}

.cta-buttons .btn-secondary {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border: 2px solid white;
  color: white;
}

.cta-buttons .btn-secondary:hover {
  background: white;
  color: var(--primary-700);
}

.features-section {
  margin-bottom: var(--spacing-3xl);
  width: 100%;
  padding: 0 var(--spacing-xl);
}

.section-title {
  text-align: center;
  margin-bottom: var(--spacing-2xl);
  font-size: clamp(2rem, 4vw, 2.75rem);
  color: var(--text-primary);
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--spacing-2xl);
  max-width: 1200px;
  margin: 0 auto;
}

.feature-card {
  background: white;
  border-radius: var(--radius-xl);
  padding: var(--spacing-2xl);
  text-align: center;
  box-shadow: var(--shadow-md);
  transition: all var(--transition-base);
  border: 2px solid transparent;
}

.feature-card:hover {
  transform: translateY(-8px);
  box-shadow: var(--shadow-2xl);
  border-color: var(--primary-200);
}

.feature-icon {
  font-size: 4rem;
  margin-bottom: var(--spacing-lg);
  display: inline-block;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%,
  100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10px);
  }
}

.feature-card:nth-child(1) .feature-icon {
  animation-delay: 0s;
}

.feature-card:nth-child(2) .feature-icon {
  animation-delay: 0.2s;
}

.feature-card:nth-child(3) .feature-icon {
  animation-delay: 0.4s;
}

.feature-card h3 {
  margin-bottom: var(--spacing-md);
  color: var(--primary-700);
  font-size: 1.5rem;
}

.feature-card p {
  color: var(--text-secondary);
  line-height: 1.7;
}

.disclaimer-section {
  margin-bottom: var(--spacing-3xl);
  width: 100%;
  padding: 0 var(--spacing-xl);
}

.disclaimer-box {
  background: linear-gradient(135deg, #fff8e1 0%, #fff3cd 100%);
  border-left: 6px solid var(--warning);
  padding: var(--spacing-2xl);
  border-radius: var(--radius-lg);
  max-width: 900px;
  margin: 0 auto;
  box-shadow: var(--shadow-md);
}

.disclaimer-box h3 {
  color: var(--warning-dark);
  margin-top: 0;
  margin-bottom: var(--spacing-md);
  font-size: 1.5rem;
}

.disclaimer-box p {
  color: var(--text-primary);
  font-size: 1.05rem;
  line-height: 1.7;
}



.auth-page {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: calc(100vh - 180px);
  width: 100%;
  padding: var(--spacing-2xl) var(--spacing-xl);
}

.auth-container {
  background: white;
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-2xl);
  padding: var(--spacing-3xl);
  width: 100%;
  max-width: 480px;
  border: 1px solid var(--gray-200);
  animation: slideUp 0.5s ease;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.auth-container h2 {
  text-align: center;
  margin-bottom: var(--spacing-2xl);
  font-size: 2rem;
  background: var(--bg-gradient-1);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.auth-form {
  margin-top: var(--spacing-xl);
}

.auth-form .btn {
  width: 100%;
  margin-top: var(--spacing-md);
  padding: 14px;
  font-size: 1.05rem;
}

.auth-footer {
  text-align: center;
  margin-top: var(--spacing-xl);
  color: var(--text-secondary);
}

.auth-footer a {
  color: var(--primary-600);
  font-weight: 600;
  transition: all var(--transition-base);
}

.auth-footer a:hover {
  color: var(--primary-700);
  text-decoration: underline;
}



.dashboard-page {
  width: 100%;
  max-width: 1400px;
  animation: fadeIn 0.5s ease;
}

.welcome-section {
  text-align: center;
  margin-bottom: var(--spacing-3xl);
  padding: var(--spacing-2xl);
  background: var(--bg-gradient-1);
  color: white;
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-lg);
}

.welcome-section h1 {
  color: white;
  margin-bottom: var(--spacing-md);
  font-size: clamp(1.8rem, 4vw, 2.5rem);
}

.welcome-section p {
  color: rgba(255, 255, 255, 0.9);
  font-size: 1.2rem;
}

.dashboard-content {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: var(--spacing-2xl);
  width: 100%;
}

.dashboard-content .card {
  height: fit-content;
}

.dashboard-content .card h2 {
  color: var(--primary-700);
  margin-bottom: var(--spacing-lg);
  font-size: 1.5rem;
  padding-bottom: var(--spacing-md);
  border-bottom: 3px solid var(--primary-100);
}

.mood-card {
  background: linear-gradient(135deg, var(--primary-50) 0%, white 100%);
}

.quick-actions {
  background: linear-gradient(135deg, var(--accent-50) 0%, white 100%);
}

.quick-actions h2 {
  color: var(--accent-800);
  border-bottom-color: var(--accent-100);
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
  margin-top: var(--spacing-lg);
}

.action-buttons .btn {
  width: 100%;
  justify-content: flex-start;
  padding-left: var(--spacing-xl);
}



.mood-page {
  width: 100%;
  max-width: 1400px;
  animation: fadeIn 0.5s ease;
}

.mood-page h1 {
  text-align: center;
  margin-bottom: var(--spacing-2xl);
  font-size: clamp(2rem, 4vw, 2.75rem);
}

.mood-form {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.mood-content {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  gap: var(--spacing-2xl);
  width: 100%;
}

.mood-selector {
  margin-bottom: var(--spacing-lg);
}

.mood-selector > label {
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-lg);
  display: block;
}

.mood-options {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(60px, 1fr));
  gap: var(--spacing-md);
  margin-top: var(--spacing-lg);
}

.mood-option {
  position: relative;
}

.mood-option input {
  position: absolute;
  opacity: 0;
  cursor: pointer;
}

.mood-label {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-lg);
  border: 3px solid var(--gray-300);
  border-radius: var(--radius-lg);
  transition: all var(--transition-base);
  cursor: pointer;
  background: white;
  font-weight: 600;
  font-size: 0.9rem;
  min-height: 100px;
}

.mood-emoji {
  font-size: 2.5rem;
  transition: transform var(--transition-base);
}

.mood-text {
  font-size: 0.9rem;
  color: var(--text-secondary);
  font-weight: 600;
}

.mood-option input:checked + .mood-label {
  border-color: var(--primary-500);
  background: var(--primary-50);
  transform: scale(1.05);
  box-shadow: var(--shadow-lg);
}

.mood-option input:checked + .mood-label .mood-text {
  color: var(--primary-700);
}

.mood-option input:checked + .mood-label .mood-emoji {
  transform: scale(1.2);
}

.mood-option:hover .mood-label {
  border-color: var(--primary-400);
  transform: translateY(-4px) scale(1.02);
  box-shadow: var(--shadow-md);
}

.mood-option:hover .mood-label .mood-emoji {
  transform: scale(1.1);
}

.mood-list {
  max-height: 600px;
  overflow-y: auto;
  padding-right: var(--spacing-sm);
}

.mood-entry {
  padding: var(--spacing-lg);
  border-bottom: 1px solid var(--gray-200);
  transition: all var(--transition-base);
  border-radius: var(--radius-md);
  margin-bottom: var(--spacing-sm);
}

.mood-entry:hover {
  background: var(--gray-50);
  padding-left: var(--spacing-xl);
}

.mood-entry:last-child {
  border-bottom: none;
}

.mood-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
  flex-wrap: wrap;
  gap: var(--spacing-sm);
}

.mood-badge {
  padding: 8px 16px;
  border-radius: var(--radius-full);
  font-size: 0.9rem;
  font-weight: 700;
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-sm);
  box-shadow: var(--shadow-sm);
}

.mood-1 {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  color: white;
}

.mood-2 {
  background: linear-gradient(135deg, #ffa502 0%, #ff7f50 100%);
  color: white;
}

.mood-3 {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
}

.mood-4 {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
  color: white;
}

.mood-5 {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
}

.mood-date {
  color: var(--text-tertiary);
  font-size: 0.9rem;
}

.mood-note {
  color: var(--text-secondary);
  font-style: italic;
  line-height: 1.6;
  padding: var(--spacing-md);
  background: var(--gray-50);
  border-radius: var(--radius-md);
  border-left: 3px solid var(--primary-300);
}

.more-entries {
  text-align: center;
  margin-top: var(--spacing-lg);
  font-style: italic;
  color: var(--text-tertiary);
  padding: var(--spacing-md);
}



.resources-page {
  width: 100%;
  max-width: 1400px;
  animation: fadeIn 0.5s ease;
}

.resources-page h1 {
  text-align: center;
  margin-bottom: var(--spacing-2xl);
  font-size: clamp(2rem, 4vw, 2.75rem);
}

.resources-controls {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-2xl);
  width: 100%;
  justify-content: center;
}

.search-bar {
  flex: 1;
  min-width: 300px;
  max-width: 500px;
}

.search-bar input {
  padding: 14px 18px;
  border: 2px solid var(--gray-300);
  border-radius: var(--radius-md);
  width: 100%;
  font-size: 1rem;
  transition: all var(--transition-base);
}

.search-bar input:focus {
  outline: none;
  border-color: var(--primary-500);
  box-shadow: 0 0 0 4px var(--primary-50);
}

.category-filter select {
  padding: 14px 18px;
  border: 2px solid var(--gray-300);
  border-radius: var(--radius-md);
  font-size: 1rem;
  background: white;
  cursor: pointer;
  transition: all var(--transition-base);
}

.category-filter select:focus {
  outline: none;
  border-color: var(--primary-500);
  box-shadow: 0 0 0 4px var(--primary-50);
}

.resources-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: var(--spacing-2xl);
  width: 100%;
}

.resource-card {
  background: white;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  padding: var(--spacing-xl);
  transition: all var(--transition-base);
  border: 2px solid transparent;
  display: flex;
  flex-direction: column;
}

.resource-card:hover {
  transform: translateY(-6px);
  box-shadow: var(--shadow-2xl);
  border-color: var(--primary-200);
}

.resource-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--spacing-md);
  gap: var(--spacing-md);
}

.resource-header h3 {
  flex: 1;
  color: var(--primary-700);
  font-size: 1.3rem;
  line-height: 1.3;
}

.resource-category {
  background: var(--bg-gradient-1);
  color: white;
  padding: 6px 12px;
  border-radius: var(--radius-md);
  font-size: 0.8rem;
  font-weight: 700;
  white-space: nowrap;
}

.resource-description {
  margin-bottom: var(--spacing-lg);
  color: var(--text-secondary);
  line-height: 1.6;
  flex-grow: 1;
}

.resource-tags {
  margin-bottom: var(--spacing-lg);
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
}

.tag {
  display: inline-block;
  background: var(--gray-100);
  color: var(--text-secondary);
  padding: 6px 12px;
  border-radius: var(--radius-full);
  font-size: 0.8rem;
  font-weight: 500;
  transition: all var(--transition-base);
}

.tag:hover {
  background: var(--primary-100);
  color: var(--primary-700);
}

.resource-meta {
  display: flex;
  justify-content: space-between;
  font-size: 0.9rem;
  color: var(--text-tertiary);
  padding-top: var(--spacing-md);
  border-top: 1px solid var(--gray-200);
}

.resource-footer {
  margin-top: var(--spacing-lg);
  display: flex;
  gap: var(--spacing-md);
}



.support-page {
  width: 100%;
  max-width: 1400px;
  animation: fadeIn 0.5s ease;
}

.support-page h1 {
  text-align: center;
  margin-bottom: var(--spacing-2xl);
  font-size: clamp(2rem, 4vw, 2.75rem);
}

.support-content {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
  gap: var(--spacing-2xl);
  width: 100%;
}

.requests-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.request-item {
  padding: var(--spacing-xl);
  border: 2px solid var(--gray-200);
  border-radius: var(--radius-lg);
  background: white;
  transition: all var(--transition-base);
  box-shadow: var(--shadow-sm);
}

.request-item:hover {
  box-shadow: var(--shadow-lg);
  border-color: var(--primary-300);
}

.request-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--spacing-md);
  gap: var(--spacing-md);
  flex-wrap: wrap;
}

.request-header h3 {
  flex: 1;
  color: var(--text-primary);
  font-size: 1.3rem;
}

.status-badge {
  padding: 8px 14px;
  border-radius: var(--radius-full);
  font-size: 0.85rem;
  font-weight: 700;
  white-space: nowrap;
}

.status-open {
  background: var(--danger-light);
  color: var(--danger-dark);
  border: 2px solid var(--danger);
}

.status-in_progress {
  background: var(--warning-light);
  color: var(--warning-dark);
  border: 2px solid var(--warning);
}

.status-closed {
  background: var(--success-light);
  color: var(--success-dark);
  border: 2px solid var(--success);
}

.request-description {
  margin-bottom: var(--spacing-lg);
  color: var(--text-secondary);
  line-height: 1.6;
  padding: var(--spacing-md);
  background: var(--gray-50);
  border-radius: var(--radius-md);
}

.counselor-note {
  background: linear-gradient(135deg, var(--info-light) 0%, white 100%);
  padding: var(--spacing-lg);
  border-radius: var(--radius-md);
  margin-bottom: var(--spacing-lg);
  border-left: 4px solid var(--info);
}

.counselor-note strong {
  color: var(--info-dark);
  display: block;
  margin-bottom: var(--spacing-sm);
  font-size: 1.05rem;
}

.counselor-note p {
  color: var(--text-primary);
  margin: 0;
  line-height: 1.6;
}

.request-meta {
  display: flex;
  justify-content: space-between;
  font-size: 0.9rem;
  color: var(--text-tertiary);
  padding-top: var(--spacing-md);
  border-top: 1px solid var(--gray-200);
  flex-wrap: wrap;
  gap: var(--spacing-sm);
}



.admin-dashboard {
  width: 100%;
  max-width: 1400px;
  animation: fadeIn 0.5s ease;
}

.admin-dashboard h1 {
  text-align: center;
  margin-bottom: var(--spacing-2xl);
  font-size: clamp(2rem, 4vw, 2.75rem);
}

.admin-tabs {
  display: flex;
  margin-bottom: var(--spacing-2xl);
  border-bottom: 2px solid var(--gray-200);
  width: 100%;
  gap: var(--spacing-md);
  overflow-x: auto;
}

.admin-content {
  width: 100%;
}

.tab {
  padding: 16px 28px;
  background: none;
  border: none;
  cursor: pointer;
  font-weight: 600;
  font-size: 1.05rem;
  color: var(--text-tertiary);
  border-bottom: 3px solid transparent;
  transition: all var(--transition-base);
  white-space: nowrap;
}

.tab:hover {
  color: var(--primary-600);
  background: var(--primary-50);
}

.tab.active {
  color: var(--primary-600);
  border-bottom-color: var(--primary-600);
  background: var(--primary-50);
}

.filters {
  margin-bottom: var(--spacing-xl);
  padding: var(--spacing-lg);
  background: var(--gray-50);
  border-radius: var(--radius-md);
}

.filters label {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  font-weight: 600;
  color: var(--text-primary);
}

.filters input[type="checkbox"] {
  width: 20px;
  height: 20px;
  cursor: pointer;
}

.admin-request {
  background: var(--gray-50);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-lg);
  border: 2px solid var(--gray-200);
}

.request-response {
  margin: var(--spacing-lg) 0;
}

.request-response textarea {
  width: 100%;
  min-height: 100px;
  margin-bottom: var(--spacing-md);
  padding: var(--spacing-md);
  border: 2px solid var(--gray-300);
  border-radius: var(--radius-md);
  font-family: inherit;
  font-size: 1rem;
}

.status-buttons {
  display: flex;
  gap: var(--spacing-md);
  flex-wrap: wrap;
}

.resources-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.resource-item {
  padding: var(--spacing-xl);
  border: 2px solid var(--gray-200);
  border-radius: var(--radius-lg);
  background: white;
  transition: all var(--transition-base);
}

.resource-item:hover {
  box-shadow: var(--shadow-md);
  border-color: var(--primary-300);
}

.resource-actions {
  margin-top: var(--spacing-lg);
  text-align: right;
  display: flex;
  gap: var(--spacing-md);
  justify-content: flex-end;
}



.text-center {
  text-align: center;
}

.mt-1 {
  margin-top: var(--spacing-xs);
}
.mt-2 {
  margin-top: var(--spacing-sm);
}
.mt-3 {
  margin-top: var(--spacing-md);
}
.mt-4 {
  margin-top: var(--spacing-lg);
}
.mt-5 {
  margin-top: var(--spacing-xl);
}

.mb-1 {
  margin-bottom: var(--spacing-xs);
}
.mb-2 {
  margin-bottom: var(--spacing-sm);
}
.mb-3 {
  margin-bottom: var(--spacing-md);
}
.mb-4 {
  margin-bottom: var(--spacing-lg);
}
.mb-5 {
  margin-bottom: var(--spacing-xl);
}

.loading {
  text-align: center;
  padding: var(--spacing-2xl);
  color: var(--text-tertiary);
  font-size: 1.1rem;
}

.empty-state {
  text-align: center;
  padding: var(--spacing-3xl);
  color: var(--text-tertiary);
}

.empty-state-icon {
  font-size: 4rem;
  margin-bottom: var(--spacing-lg);
  opacity: 0.5;
}



@media (max-width: 1024px) {
  .nav-menu {
    gap: var(--spacing-xs);
  }

  .features-grid {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  .dashboard-content {
    grid-template-columns: 1fr;
  }

  .mood-content {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  :root {
    --spacing-xl: 1rem;
    --spacing-2xl: 1.5rem;
    --spacing-3xl: 2rem;
  }

  .main-content {
    padding: var(--spacing-md);
    margin-top: 70px;
  }

  .nav-container {
    padding: 0 var(--spacing-md);
    height: 70px;
  }

  .nav-logo {
    font-size: 1.4rem;
  }

  .nav-menu {
    gap: var(--spacing-xs);
    flex-wrap: wrap;
  }

  .nav-link {
    padding: 8px 12px;
    font-size: 0.9rem;
  }

  .hero-section {
    padding: 3rem 1.5rem;
    margin-bottom: var(--spacing-2xl);
  }

  .hero-title {
    font-size: clamp(1.8rem, 8vw, 2.5rem);
  }

  .hero-subtitle {
    font-size: 1rem;
  }

  .cta-buttons {
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .cta-buttons .btn {
    width: 100%;
  }

  .features-grid {
    grid-template-columns: 1fr;
    gap: var(--spacing-lg);
  }

  .mood-options {
    grid-template-columns: repeat(auto-fit, minmax(50px, 1fr));
  }

  .mood-label {
    padding: var(--spacing-md);
    font-size: 1rem;
    min-height: 60px;
  }

  .resources-controls {
    flex-direction: column;
  }

  .search-bar {
    max-width: 100%;
  }

  .resources-grid {
    grid-template-columns: 1fr;
  }

  .support-content {
    grid-template-columns: 1fr;
  }

  .crisis-content {
    flex-direction: column;
    gap: var(--spacing-sm);
    text-align: center;
  }

  .crisis-contact {
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .auth-container {
    padding: var(--spacing-xl);
  }

  .admin-tabs {
    overflow-x: auto;
    padding-bottom: var(--spacing-sm);
  }

  .tab {
    padding: 12px 20px;
    font-size: 0.95rem;
  }

  .card {
    padding: var(--spacing-lg);
  }
}

@media (max-width: 480px) {
  .btn {
    padding: 10px 18px;
    font-size: 0.9rem;
  }

  .feature-icon {
    font-size: 3rem;
  }

  .mood-badge {
    font-size: 0.8rem;
    padding: 6px 12px;
  }

  .request-header {
    flex-direction: column;
    align-items: flex-start;
  }

  .status-badge {
    align-self: flex-start;
  }
}



@media print {
  .navbar,
  .crisis-banner,
  .btn,
  .cta-buttons {
    display: none;
  }

  .main-content {
    margin-top: 0;
  }

  .card {
    box-shadow: none;
    border: 1px solid var(--gray-300);
    page-break-inside: avoid;
  }
}




.mood-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-2xl);
}

.stat-card {
  background: white;
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
  display: flex;
  align-items: center;
  gap: var(--spacing-lg);
  box-shadow: var(--shadow-md);
  transition: all var(--transition-base);
  border: 2px solid transparent;
}

.stat-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-xl);
  border-color: var(--primary-200);
}

.stat-icon {
  font-size: 2.5rem;
  flex-shrink: 0;
}

.stat-content {
  flex: 1;
}

.stat-value {
  font-size: 1.8rem;
  font-weight: 700;
  color: var(--text-primary);
  line-height: 1.2;
  margin-bottom: var(--spacing-xs);
}

.stat-label {
  font-size: 0.9rem;
  color: var(--text-tertiary);
  font-weight: 500;
}


.dashboard-tabs {
  display: flex;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-2xl);
  border-bottom: 2px solid var(--gray-200);
  overflow-x: auto;
  padding-bottom: var(--spacing-sm);
}

.tab-btn {
  padding: 14px 24px;
  background: none;
  border: none;
  border-bottom: 3px solid transparent;
  cursor: pointer;
  font-weight: 600;
  font-size: 1rem;
  color: var(--text-tertiary);
  transition: all var(--transition-base);
  white-space: nowrap;
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.tab-btn:hover {
  color: var(--primary-600);
  background: var(--primary-50);
  border-radius: var(--radius-md) var(--radius-md) 0 0;
}

.tab-btn.active {
  color: var(--primary-600);
  border-bottom-color: var(--primary-600);
  background: var(--primary-50);
  border-radius: var(--radius-md) var(--radius-md) 0 0;
}


.dashboard-grid {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: var(--spacing-2xl);
  margin-bottom: var(--spacing-2xl);
}

.chart-card {
  min-height: 400px;
}

.card-subtitle {
  font-size: 0.9rem;
  color: var(--text-tertiary);
  margin-top: var(--spacing-xs);
  font-weight: 400;
}


.action-buttons-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
  gap: var(--spacing-md);
  margin-top: var(--spacing-lg);
}

.action-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl);
  background: var(--gray-50);
  border-radius: var(--radius-lg);
  text-decoration: none;
  transition: all var(--transition-base);
  border: 2px solid transparent;
  min-height: 120px;
}

.action-card:hover {
  background: var(--primary-50);
  border-color: var(--primary-300);
  transform: translateY(-4px);
  box-shadow: var(--shadow-md);
}

.action-icon {
  font-size: 2.5rem;
  margin-bottom: var(--spacing-md);
}

.action-label {
  font-weight: 600;
  color: var(--text-primary);
  font-size: 0.95rem;
}


.mood-trend-chart {
  padding: var(--spacing-lg) 0;
}

.chart-tooltip {
  background: white;
  padding: var(--spacing-md);
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-lg);
  border: 2px solid var(--primary-200);
}

.tooltip-date {
  font-weight: 700;
  color: var(--primary-700);
  margin-bottom: var(--spacing-xs);
}

.tooltip-mood {
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.tooltip-entries {
  color: var(--text-tertiary);
  font-size: 0.85rem;
}

.tooltip-no-data {
  color: var(--text-tertiary);
  font-style: italic;
}


.mood-heatmap {
  padding: var(--spacing-lg);
}

.heatmap-container {
  display: flex;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-xl);
  overflow-x: auto;
  padding: var(--spacing-md);
}

.heatmap-days {
  display: flex;
  flex-direction: column;
  gap: 4px;
  padding-right: var(--spacing-sm);
}

.day-label {
  height: 28px;
  display: flex;
  align-items: center;
  font-size: 0.75rem;
  font-weight: 600;
  color: var(--text-tertiary);
}

.heatmap-grid {
  display: flex;
  gap: 4px;
  flex: 1;
}

.heatmap-week {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.heatmap-cell {
  width: 28px;
  height: 28px;
  border-radius: var(--radius-sm);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all var(--transition-base);
  border: 2px solid transparent;
}

.heatmap-cell:hover {
  transform: scale(1.2);
  border-color: var(--gray-400);
  box-shadow: var(--shadow-md);
  z-index: 10;
}

.heatmap-emoji {
  font-size: 0.9rem;
}

.heatmap-legend {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-lg);
  align-items: center;
  padding: var(--spacing-lg);
  background: var(--gray-50);
  border-radius: var(--radius-md);
}

.legend-label {
  font-weight: 700;
  color: var(--text-primary);
}

.legend-items {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-md);
}

.legend-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  font-size: 0.85rem;
}

.legend-color {
  width: 20px;
  height: 20px;
  border-radius: var(--radius-sm);
  border: 2px solid var(--gray-300);
}


.achievement-badges {
  padding: var(--spacing-md);
}

.badge-section {
  margin-bottom: var(--spacing-3xl);
}

.badge-section-title {
  font-size: 1.3rem;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xl);
  padding-bottom: var(--spacing-md);
  border-bottom: 2px solid var(--gray-200);
}

.badge-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: var(--spacing-lg);
}

.badge-card {
  background: white;
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
  display: flex;
  gap: var(--spacing-lg);
  transition: all var(--transition-base);
  border: 2px solid var(--gray-200);
  position: relative;
}

.badge-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-lg);
}

.badge-card.earned {
  border-color: var(--success);
  background: linear-gradient(135deg, var(--success-light) 0%, white 100%);
}

.badge-card.in-progress {
  border-color: var(--primary-300);
}

.badge-card.locked {
  opacity: 0.6;
  background: var(--gray-50);
}

.badge-icon {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  border: 4px solid var(--gray-300);
  flex-shrink: 0;
  transition: all var(--transition-base);
}

.badge-card.earned .badge-icon {
  background: var(--success-light);
  animation: pulse 2s infinite;
}

.badge-emoji {
  font-size: 2.5rem;
}

.locked-emoji {
  font-size: 2rem;
  opacity: 0.5;
}

.badge-info {
  flex: 1;
}

.badge-name {
  font-size: 1.1rem;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
  font-weight: 700;
}

.badge-description {
  color: var(--text-secondary);
  font-size: 0.9rem;
  line-height: 1.5;
  margin-bottom: var(--spacing-md);
}

.badge-progress {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  margin-top: var(--spacing-md);
}

.progress-bar {
  flex: 1;
  height: 8px;
  background: var(--gray-200);
  border-radius: var(--radius-full);
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: var(--primary-500);
  border-radius: var(--radius-full);
  transition: width var(--transition-slow);
}

.progress-text {
  font-size: 0.85rem;
  font-weight: 700;
  color: var(--text-tertiary);
  min-width: 40px;
  text-align: right;
}

.badge-earned-indicator {
  position: absolute;
  top: var(--spacing-md);
  right: var(--spacing-md);
  width: 32px;
  height: 32px;
  background: var(--success);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 1.2rem;
  box-shadow: var(--shadow-md);
}


.loading-spinner {
  text-align: center;
  padding: var(--spacing-2xl);
  color: var(--text-tertiary);
}


.overview-section,
.analytics-section,
.achievements-section,
.track-section {
  animation: fadeIn 0.3s ease;
}

.mood-entry-card {
  max-width: 800px;
  margin: 0 auto;
}


.welcome-content {
  max-width: 800px;
  margin: 0 auto;
}

.welcome-section p {
  color: rgba(255, 255, 255, 0.95);
  font-size: 1.1rem;
  margin: 0;
}


@media (max-width: 1024px) {
  .dashboard-grid {
    grid-template-columns: 1fr;
  }

  .mood-stats {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 768px) {
  .dashboard-tabs {
    gap: var(--spacing-sm);
  }

  .tab-btn {
    padding: 12px 16px;
    font-size: 0.9rem;
  }

  .mood-stats {
    grid-template-columns: 1fr;
  }

  .stat-card {
    padding: var(--spacing-lg);
  }

  .badge-grid {
    grid-template-columns: 1fr;
  }

  .heatmap-container {
    overflow-x: scroll;
  }

  .action-buttons-grid {
    grid-template-columns: 1fr;
  }
}



.ai-chat-page {
  max-width: 1400px;
  margin: 0 auto;
  padding: var(--spacing-xl);
  height: calc(100vh - 80px);
  display: flex;
  flex-direction: column;
}

.ai-chat-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--spacing-md);
  padding-bottom: var(--spacing-md);
  border-bottom: 2px solid var(--gray-200);
}

.header-content h1 {
  margin: 0 0 var(--spacing-sm) 0;
  background: linear-gradient(135deg, var(--primary-600), var(--secondary-600));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.header-content .subtitle {
  color: var(--text-secondary);
  font-size: 1rem;
  margin: 0;
}

.ai-chat-notice {
  background: linear-gradient(135deg, var(--warning-light), var(--accent-50));
  border-left: 4px solid var(--warning);
  padding: var(--spacing-md);
  border-radius: var(--radius-md);
  margin-bottom: var(--spacing-md);
}

.ai-chat-notice p {
  margin: 0;
  color: var(--text-primary);
  font-size: 0.85rem;
  line-height: 1.5;
}

.ai-chat-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: white;
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-xl);
  overflow: hidden;
  border: 2px solid var(--gray-200);
}

.messages-container {
  flex: 1;
  overflow-y: auto;
  padding: var(--spacing-xl);
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
  background: linear-gradient(to bottom, var(--gray-50), white);
  min-height: 500px;
}

.message {
  display: flex;
  gap: var(--spacing-md);
  animation: slideIn 0.3s ease;
}

.user-message {
  flex-direction: row-reverse;
}

.message-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.5rem;
  flex-shrink: 0;
  background: white;
  box-shadow: var(--shadow-md);
}

.user-message .message-avatar {
  background: linear-gradient(135deg, var(--primary-500), var(--primary-700));
}

.ai-message .message-avatar {
  background: linear-gradient(
    135deg,
    var(--secondary-500),
    var(--secondary-700)
  );
}

.message-content {
  max-width: 75%;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.message-text {
  padding: var(--spacing-lg) var(--spacing-xl);
  border-radius: var(--radius-lg);
  line-height: 1.7;
  word-wrap: break-word;
  white-space: pre-wrap;
  font-size: 1rem;
}

.user-message .message-text {
  background: linear-gradient(135deg, var(--primary-500), var(--primary-600));
  color: white;
  border-bottom-right-radius: var(--radius-sm);
  box-shadow: var(--shadow-md);
}

.ai-message .message-text {
  background: white;
  color: var(--text-primary);
  border: 2px solid var(--gray-200);
  border-bottom-left-radius: var(--radius-sm);
}

.message-timestamp {
  font-size: 0.75rem;
  color: var(--text-tertiary);
  padding: 0 var(--spacing-sm);
}

.user-message .message-timestamp {
  text-align: right;
}

.typing-indicator {
  display: flex;
  gap: 6px;
  padding: var(--spacing-lg);
}

.typing-indicator span {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: var(--primary-400);
  animation: typing 1.4s infinite;
}

.typing-indicator span:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-indicator span:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typing {
  0%,
  60%,
  100% {
    transform: translateY(0);
    opacity: 0.5;
  }
  30% {
    transform: translateY(-10px);
    opacity: 1;
  }
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.chat-error {
  padding: var(--spacing-md);
  background: var(--error-light);
  border-left: 4px solid var(--error);
  margin: var(--spacing-md);
  border-radius: var(--radius-md);
}

.chat-error p {
  margin: 0;
  color: var(--error-dark);
  font-weight: 500;
}

.message-input-form {
  border-top: 2px solid var(--gray-200);
  padding: var(--spacing-lg);
  background: white;
}

.input-wrapper {
  display: flex;
  gap: var(--spacing-md);
  align-items: flex-end;
}

.message-input {
  flex: 1;
  padding: var(--spacing-md) var(--spacing-lg);
  border: 2px solid var(--gray-300);
  border-radius: var(--radius-lg);
  font-family: inherit;
  font-size: 1rem;
  resize: none;
  max-height: 120px;
  transition: all var(--transition-base);
}

.message-input:focus {
  outline: none;
  border-color: var(--primary-500);
  box-shadow: 0 0 0 3px var(--primary-100);
}

.message-input:disabled {
  background: var(--gray-100);
  cursor: not-allowed;
}

.send-button {
  width: 50px;
  height: 50px;
  border: none;
  background: linear-gradient(135deg, var(--primary-500), var(--primary-700));
  color: white;
  border-radius: var(--radius-lg);
  font-size: 1.5rem;
  cursor: pointer;
  transition: all var(--transition-base);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.send-button:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.send-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

.input-hint {
  margin-top: var(--spacing-sm);
  font-size: 0.85rem;
  color: var(--text-tertiary);
  font-style: italic;
}


@media (max-width: 768px) {
  .ai-chat-page {
    padding: var(--spacing-md);
    height: calc(100vh - 60px);
  }

  .ai-chat-header {
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .header-content h1 {
    font-size: 1.3rem;
  }

  .ai-chat-notice {
    padding: var(--spacing-sm);
  }

  .ai-chat-notice p {
    font-size: 0.8rem;
  }

  .message-content {
    max-width: 90%;
  }

  .message-text {
    padding: var(--spacing-md);
    font-size: 0.95rem;
  }

  .message-input-form {
    padding: var(--spacing-md);
  }

  .input-wrapper {
    gap: var(--spacing-sm);
  }

  .send-button {
    width: 45px;
    height: 45px;
  }
}



